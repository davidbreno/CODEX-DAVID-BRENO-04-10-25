<Window x:Class="FinaceDavid.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FinaceDavid.Desktop.Views"
        mc:Ignorable="d"
        Title="FINACE DAVID" Height="800" Width="1200"
        Background="{DynamicResource AppBackground}">
    <Grid>
        <TabControl Margin="16" Background="Transparent" Foreground="{DynamicResource ForegroundBrush}">
            <TabItem Header="Home">
                <views:HomeView />
            </TabItem>
            <TabItem Header="Transações">
                <views:TransactionsView />
            </TabItem>
            <TabItem Header="Contas a Pagar">
                <views:PayablesView />
            </TabItem>
            <TabItem Header="Calendário">
                <views:CalendarView />
            </TabItem>
            <TabItem Header="Configurações">
                <views:SettingsView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>

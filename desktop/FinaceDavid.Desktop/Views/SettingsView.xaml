<UserControl x:Class="FinaceDavid.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded"
             Background="Transparent">
    <StackPanel>
        <TextBlock Text="Tema" FontSize="16" FontWeight="SemiBold" />
        <TextBlock Text="{Binding Theme}" Margin="0,4,0,12" />
        <Button Content="Alternar Tema" Click="ToggleTheme_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,0,16" />
        <Separator Margin="0,0,0,16" />
        <TextBlock Text="Backup local" FontSize="16" FontWeight="SemiBold" />
        <Button Content="Exportar" Click="Export_Click" Style="{StaticResource SecondaryButton}" Margin="0,8,0,0" />
        <Button Content="Importar" Click="Import_Click" Style="{StaticResource SecondaryButton}" Margin="0,8,0,0" />
        <TextBlock Text="{Binding BackupPath}" Foreground="{DynamicResource ForegroundMutedBrush}" Margin="0,8,0,0" />
    </StackPanel>
</UserControl>

<UserControl x:Class="FinaceDavid.Desktop.Views.PayablesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded"
             Background="Transparent">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,16,0">
                <TextBlock Text="Vencidas" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                <ListView x:Name="OverdueList" ItemsSource="{Binding Overdue}" Style="{StaticResource CardListView}" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                <TextBlock Text="Hoje" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                <ListView x:Name="TodayList" ItemsSource="{Binding DueToday}" Style="{StaticResource CardListView}" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="PrÃ³ximas" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                <ListView x:Name="UpcomingList" ItemsSource="{Binding Upcoming}" Style="{StaticResource CardListView}" />
            </StackPanel>
        </Grid>
        <Button Grid.Row="1" Content="Marcar como paga" HorizontalAlignment="Right" Margin="0,12,0,0" Style="{StaticResource PrimaryButton}" Click="MarkPaid_Click" />
    </Grid>
</UserControl>

<UserControl x:Class="FinaceDavid.Desktop.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:FinaceDavid.Desktop.Models"
             Loaded="UserControl_Loaded"
             Background="Transparent">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <ComboBox Width="120" SelectedValue="{Binding TypeFilter}" SelectedValuePath="Tag" Margin="0,0,12,0">
                <ComboBoxItem Content="Todas" Tag="{x:Null}" IsSelected="True" />
                <ComboBoxItem Content="Entradas" Tag="{x:Static models:TransactionType.Entrada}" />
                <ComboBoxItem Content="Saídas" Tag="{x:Static models:TransactionType.Saida}" />
            </ComboBox>
            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,12,0" />
            <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,12,0" />
            <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0" />
            <Button Content="Filtrar" Click="Filter_Click" Style="{StaticResource PrimaryButton}" />
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Transactions}" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" Background="{DynamicResource CardBackground}" RowBackground="Transparent" AlternatingRowBackground="#141d2a">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Type}" />
                <DataGridTextColumn Header="Categoria" Binding="{Binding Category}" />
                <DataGridTextColumn Header="Descrição" Binding="{Binding Description}" Width="2*" />
                <DataGridTextColumn Header="Valor" Binding="{Binding Amount, StringFormat=R$ {0:N2}}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

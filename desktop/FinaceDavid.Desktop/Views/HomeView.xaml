<UserControl x:Class="FinaceDavid.Desktop.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             Loaded="UserControl_Loaded"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,16">
            <Button Content="Hoje" Click="Today_Click" Style="{StaticResource SecondaryButton}" Margin="4,0" />
            <Button Content="7 dias" Click="Week_Click" Style="{StaticResource SecondaryButton}" Margin="4,0" />
            <Button Content="Este mês" Click="Month_Click" Style="{StaticResource SecondaryButton}" Margin="4,0" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Padding="24" Margin="0,0,16,16" CornerRadius="16" Background="{DynamicResource CardBackground}">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,24,0">
                        <TextBlock Text="Saldo" FontSize="14" Foreground="{DynamicResource ForegroundMutedBrush}" />
                        <TextBlock Text="{Binding Balance, StringFormat=R$ {0:N2}}" FontSize="32" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Margin="0,0,24,0">
                        <TextBlock Text="Entradas" FontSize="14" Foreground="{DynamicResource ForegroundMutedBrush}" />
                        <TextBlock Text="{Binding TotalIncome, StringFormat=R$ {0:N2}}" FontSize="24" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Saídas" FontSize="14" Foreground="{DynamicResource ForegroundMutedBrush}" />
                        <TextBlock Text="{Binding TotalOutcome, StringFormat=R$ {0:N2}}" FontSize="24" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Padding="16" Margin="0,0,16,16" CornerRadius="16" Background="{DynamicResource CardBackground}">
                <StackPanel>
                    <TextBlock Text="Evolução" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <oxy:PlotView Model="{Binding Trend, Converter={StaticResource TrendToPlotModelConverter}}" Height="280" />
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Padding="16" Margin="0,0,0,16" CornerRadius="16" Background="{DynamicResource CardBackground}">
                <StackPanel>
                    <TextBlock Text="Distribuição" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <oxy:PlotView Model="{Binding Distribution, Converter={StaticResource DonutToPlotModelConverter}}" Height="280" />
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Padding="16" Margin="0,0,0,16" CornerRadius="16" Background="{DynamicResource CardBackground}">
                <StackPanel>
                    <TextBlock Text="Atalhos" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
                    <UniformGrid Columns="2" Rows="2">
                        <Button Content="Entradas" Style="{StaticResource PrimaryButton}" Margin="4" />
                        <Button Content="Saídas" Style="{StaticResource PrimaryButton}" Margin="4" />
                        <Button Content="Contas a Pagar" Style="{StaticResource SecondaryButton}" Margin="4" />
                        <Button Content="Trocar Tema" Style="{StaticResource SecondaryButton}" Margin="4" />
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.ColumnSpan="2" Padding="16" Margin="0" CornerRadius="16" Background="{DynamicResource CardBackground}">
                <StackPanel>
                    <TextBlock Text="Transações Recentes" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ItemsControl ItemsSource="{Binding RecentTransactions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="0,0,0,8" CornerRadius="12" Background="#1AFFFFFF">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Description}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Category}" Foreground="{DynamicResource ForegroundMutedBrush}" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Amount, StringFormat=R$ {0:N2}}" Foreground="{Binding Type, Converter={StaticResource TransactionTypeToBrushConverter}}" FontWeight="Bold" />
                                            <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}" Foreground="{DynamicResource ForegroundMutedBrush}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

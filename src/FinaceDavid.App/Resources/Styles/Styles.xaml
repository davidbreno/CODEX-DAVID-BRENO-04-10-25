<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FinaceDavid.Converters">
    <converters:BoolToColorConverter x:Key="BoolToColorConverter" />

    <AppThemeColor x:Key="SurfaceColor">
        <AppThemeColor.Light>{StaticResource SurfaceColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource SurfaceColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="CardBackgroundColor">
        <AppThemeColor.Light>{StaticResource CardBackgroundColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource CardBackgroundColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="CardBorderColor">
        <AppThemeColor.Light>{StaticResource CardBorderColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource CardBorderColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="PrimaryTextColor">
        <AppThemeColor.Light>{StaticResource PrimaryTextColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource PrimaryTextColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="SecondaryTextColor">
        <AppThemeColor.Light>{StaticResource SecondaryTextColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource SecondaryTextColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="AccentColor">
        <AppThemeColor.Light>{StaticResource AccentColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource AccentColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="SuccessColor">
        <AppThemeColor.Light>{StaticResource SuccessColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource SuccessColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <AppThemeColor x:Key="DangerColor">
        <AppThemeColor.Light>{StaticResource DangerColorLight}</AppThemeColor.Light>
        <AppThemeColor.Dark>{StaticResource DangerColorDark}</AppThemeColor.Dark>
    </AppThemeColor>

    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Padding" Value="16,0" />
    </Style>

    <Style x:Key="FilterChipStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBorderColor}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="Padding" Value="12,0" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource SecondaryTextColor}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Padding" Value="12,0" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource SecondaryTextColor}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{DynamicResource CardBorderColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
    </Style>
</ResourceDictionary>

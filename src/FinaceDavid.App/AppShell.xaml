<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinaceDavid.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:FinaceDavid.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Dashboard"
            Route="dashboard"
            ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent
            Title="Transações"
            Route="transactions"
            ContentTemplate="{DataTemplate views:TransactionsPage}" />
        <ShellContent
            Title="Contas a Pagar"
            Route="payables"
            ContentTemplate="{DataTemplate views:PayablesPage}" />
        <ShellContent
            Title="Calendário"
            Route="calendar"
            ContentTemplate="{DataTemplate views:CalendarPage}" />
        <ShellContent
            Title="Configurações"
            Route="settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>
